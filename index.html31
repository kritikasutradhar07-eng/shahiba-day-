  <style>
    body {
      margin: 0;
      height: 100vh;
      background: linear-gradient(135deg, #ffd1dc, #ffe6f0);
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Comic Sans MS', cursive;
      overflow: hidden;
    }

    .card {
      background: white;
      padding: 30px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0,0,0,0.2);
      max-width: 320px;
    }

    h1 {
      color: #ff4f81;
    }

    button {
      background: #ff4f81;
      border: none;
      padding: 12px 20px;
      border-radius: 30px;
      color: white;
      font-size: 16px;
      cursor: pointer;
      margin-top: 15px;
    }

    .message {
      display: none;
      margin-top: 20px;
      color: #444;
      font-size: 16px;
    }

    .heart {
      position: absolute;
      color: #ff4f81;
      font-size: 20px;
      animation: float 5s linear infinite;
    }

    @keyframes float {
      from { transform: translateY(100vh); opacity: 1; }
      to { transform: translateY(-10vh); opacity: 0; }
    }
  </style>
</head>

<body>

